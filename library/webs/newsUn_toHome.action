	$(document).ready(function() {
		var curr = 0;
		timer = setInterval(function() {
			var todo = (++curr) % 6;
			$(".trigger a").eq(todo).click();
		}, 3000);

		$(".img img").hover(function() {
			clearInterval(timer);
		}, function() {
			timer = setInterval(function() {
				var todo = (++curr) % 6;
				$(".trigger a").eq(todo).click();
			}, 3000);
		});

		$(".trigger a").each(function(i) {
			$(this).click(function() {
				$(this).addClass("current").siblings().removeClass("current");
				$(".img img").eq(i).show().siblings().hide();
				curr = i;
			});
		});

	});

	//]]>
</script>
